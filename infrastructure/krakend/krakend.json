{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "endpoints": [
        {
            "endpoint": "/api/uis/openapi/v1",
            "method": "GET",
            "input_headers": ["*"],
            "output_encoding": "json",        
            "backend": [
                {
                    "url_pattern": "/openapi/v1",
                    "encoding": "json",
                    "host": [
                        "http://uis-service.default.svc.cluster.local"
                    ],
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/api/uis/scalar/v1",
            "method": "GET",
            "input_headers": ["*"],       
            "output_encoding": "no-op", 
            "backend": [
                {
                    "encoding": "no-op",
                    "url_pattern": "/scalar/v1",
                    "host": [
                        "http://uis-service.default.svc.cluster.local"
                    ],
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/api/user/login",
            "method": "POST",
            "output_encoding": "json",
            "input_headers": ["*"],        
            "backend": [
                {
                    "url_pattern": "/user/login",
                    "encoding": "json",
                    "host": [
                        "http://uis-service.default.svc.cluster.local"
                    ],
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        },
        {
            "endpoint": "/api/user/logout",
            "output_encoding": "json",
            "input_headers": ["*"],     
            "backend": [
                {
                    "url_pattern": "/user/logout",
                    "method": "POST",
                    "encoding": "json",
                    "host": [
                        "http://uis-service.default.svc.cluster.local"
                    ],
                    "extra_config": {
                        "backend/http": {
                            "return_error_code": true
                        }
                    }
                }
            ]
        }
    ],
    "extra_config": {
        "telemetry/logging": {
            "level": "DEBUG",
            "prefix": "[KRAKEND]",
            "stdout": true
        },
        "qos/ratelimit/service": {
            "every": "1m",
            "max_rate": 500,
            "client_max_rate": 50,
            "strategy": "ip"
        },
        "router": {
            "return_error_msg": true,
            "disable_access_log": false
        }
    }
}